@model CasosUso.DTOs.UsuarioDTO

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="container py-4">
    <div class="mb-4">
        <h2>Eliminar Usuario</h2>
        @if (!string.IsNullOrEmpty(ViewBag.Error as string))
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }
        <p class="text-muted">¿Estás seguro que deseas eliminar este usuario?</p>
    </div>

    <div class="card shadow-sm p-4 mb-4">
        <dl class="row">
            <dt class="col-sm-3 fw-semibold">ID</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Id)</dd>

            <dt class="col-sm-3 fw-semibold">Nombre</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

            <dt class="col-sm-3 fw-semibold">Email</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>
        </dl>
    </div>

    <form asp-action="Delete" class="d-flex gap-2">
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
    </form>
</div>
