@model Presentacion.Models.ComentariosViewModel

@{
    ViewData["Title"] = "Comentar";
}

<div class="container py-4">
    <h2>Comentar Envío</h2>
    <hr />

    @if (!string.IsNullOrEmpty(ViewBag.Error as string))
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Comentar" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="IdEnvio" class="form-label"></label>
                    <input asp-for="IdEnvio" class="form-control" readonly />
                    <span asp-validation-for="IdEnvio" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Comentario.Texto" class="form-label"></label>
                    <textarea asp-for="Comentario.Texto" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Comentario.Texto" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Crear Comentario</button>
                <a asp-action="Index" class="btn btn-link ms-3">Volver a la lista</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
