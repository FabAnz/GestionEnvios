@model CasosUso.DTOs.UsuarioLoginDTO

@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="card p-4 shadow-sm" style="width: 100%; max-width: 400px;">
        <h2 class="text-center mb-3">Iniciar Sesión</h2>

        @if (!string.IsNullOrEmpty(ViewBag.Mensaje))
        {
            <div class="alert alert-danger text-center">
                @ViewBag.Mensaje
            </div>
        }

        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Correo electrónico</label>
                <input asp-for="Email" class="form-control" type="email" placeholder="ejemplo@email.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Contrasenia" class="form-label">Contraseña</label>
                <input asp-for="Contrasenia" class="form-control" type="password" placeholder="••••••••" />
                <span asp-validation-for="Contrasenia" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Entrar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

