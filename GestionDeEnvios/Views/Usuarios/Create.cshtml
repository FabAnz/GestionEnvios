@model Presentacion.Models.UsuarioRolesViewModel

@{
    ViewData["Title"] = "Crear Usuario";
}

<div class="container py-4">
    <div class="mb-4">
        <h2 class="mb-1">Crear Usuario</h2>
        @if (!string.IsNullOrEmpty(ViewBag.Error as string))
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }
    </div>

    <div class="card shadow-sm p-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="RolId" class="form-label">Rol</label>
                <select asp-for="RolId" class="form-select" asp-items="@(new SelectList(Model.Roles, "Id", "Nombre"))">
                    <option value="">-- Seleccionar Rol --</option>
                </select>
                <span asp-validation-for="RolId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Usuario.Nombre" class="form-label"></label>
                <input asp-for="Usuario.Nombre" class="form-control" />
                <span asp-validation-for="Usuario.Nombre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Usuario.Apellido" class="form-label"></label>
                <input asp-for="Usuario.Apellido" class="form-control" />
                <span asp-validation-for="Usuario.Apellido" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Usuario.Direccion" class="form-label"></label>
                <input asp-for="Usuario.Direccion" class="form-control" />
                <span asp-validation-for="Usuario.Direccion" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Usuario.Telefono" class="form-label"></label>
                <input asp-for="Usuario.Telefono" class="form-control" type="number" />
                <span asp-validation-for="Usuario.Telefono" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Usuario.Email" class="form-label"></label>
                <input asp-for="Usuario.Email" class="form-control" type="email" />
                <span asp-validation-for="Usuario.Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Usuario.Contrasenia" class="form-label"></label>
                <input asp-for="Usuario.Contrasenia" class="form-control" type="password" />
                <span asp-validation-for="Usuario.Contrasenia" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
