@model CasosUso.DTOs.EnvioDTO

@{
    ViewData["Title"] = "Finalizar Envío";
}

<div class="container py-4">
    <h2>Finalizar Envío</h2>
    <hr />

    @if (!string.IsNullOrEmpty(ViewBag.Error as string))
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <h5>¿Está seguro que desea finalizar este envío?</h5>

    <dl class="row mt-3">
        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Id)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(m => m.Id)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.NTracking)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(m => m.NTracking)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Cliente.Email)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(m => m.Cliente.Email)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.FechaEnvio)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(m => m.FechaEnvio)</dd>

        <dt class="col-sm-3">Destino</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.Direccion))
            {
                @Html.DisplayFor(m => m.Direccion)
            }
            else
            {
                <span>Agencia @Html.DisplayFor(m => m.Agencia.Nombre)</span>
            }
        </dd>
    </dl>

    <form asp-action="Finalizar" method="post" class="mt-4">
        <button type="submit" class="btn btn-danger">Finalizar</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Volver a la lista</a>
    </form>
</div>
