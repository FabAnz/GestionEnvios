@model WebCliente.DTOs.UsuarioDTO

@{
    ViewData["Title"] = "Login";
}

<div class="login d-flex h-100 justify-content-center align-items-center">
    <div class="d-flex flex-column gap-3 caja">
        <h1 class="h2 mb-5">Login</h1>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }


        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <input asp-for="Email" class="form-control" placeholder="ejemplo@email.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-5">
                <input asp-for="Contrasenia" class="form-control" type="password" placeholder="contraseña" />
                <span asp-validation-for="Contrasenia" class="text-danger"></span>
            </div>
            <div class="form-grou">
                <input type="submit" value="Login" class="w-100 btn btn-primary" />
            </div>
        </form>

        <div>
            <a asp-action="BuscarEnvio" asp-controller="Envios" class="btn btn-texto w-100">Buscar envio</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
