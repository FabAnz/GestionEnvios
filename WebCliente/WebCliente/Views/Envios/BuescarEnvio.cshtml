@model WebCliente.DTOs.EnvioDTO

@{
    ViewData["Title"] = "BuescarEnvio";
}

<h1>BuescarEnvio</h1>

<h4>EnvioDTO</h4>

@if (ViewBag.Error != null)
{
    <span>@ViewBag.Error</span>
}

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="BuescarEnvio">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NTracking" class="control-label"></label>
                <input asp-for="NTracking" class="form-control" />
                <span asp-validation-for="NTracking" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Buscar" class="btn btn-primary" />
            </div>
        </form>
        @if (Model != null)
        {
            <div class="form-group">
                <label asp-for="Vendedor" class="control-label"></label>
                <input asp-for="Vendedor" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Cliente" class="control-label"></label>
                <input asp-for="Cliente" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Peso" class="control-label"></label>
                <input asp-for="Peso" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="FechaEnvio" class="control-label"></label>
                <input asp-for="FechaEnvio" class="form-control" readonly />
            </div>
            @if (Model.Estado == "FINALIZADO")
            {
                <div class="form-group">
                    <label asp-for="FechaEntrega" class="control-label"></label>
                    <input asp-for="FechaEntrega" class="form-control" readonly />
                </div>
            }
            <div class="form-group">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control" readonly />
            </div>
            @if (Model.Comentarios.Count > 0)
            {
                <h4>Comentarios</h4>
                <table class="table table-bordered mt-2">
                    <thead>
                        <tr>
                            <th>Texto</th>
                            <th>Fecha</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var comentario in Model.Comentarios)
                        {
                            <tr>
                                <td>@comentario.Texto</td>
                                <td>@comentario.Fecha.ToString("dd/MM/yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
